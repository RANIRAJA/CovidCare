<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/text_recovered_value"
            android:gravity="center"
            android:text="Do's"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/guideline11"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/thumb11"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Hand Wash"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toStartOf="@+id/thumb11"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Regular hand wash for 20 seconds will help you avoid germs or any kind of infection."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb11"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/handwash" />

            <View
                android:id="@+id/separator11"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline12"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/thumb12"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Cover Your Mouth &amp; Nose"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading12"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@+id/thumb12"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Covering your mouth and nose while sneezing or when anyone next to coughs or sneezes can do you a lot better."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb12"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/mask" />

            <View
                android:id="@+id/separator12"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline13"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb13"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/thumb13"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Consult A Doctor If Sick"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading13"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toStartOf="@+id/thumb13"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="If you are suffering from a common cold, cough, nausea, vomiting, shortness of breath and fatigue make it a point to consult a doctor at the earliest."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb13"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/sanitize" />

            <View
                android:id="@+id/separator13"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline14"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb14"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/thumb14"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Stay Indoors"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading14"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@+id/thumb14"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Avoid being in crowded places. An infected person can spread the virus instantly and crowded places is a good way to accomplish this."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb14"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/stayhome" />

            <View
                android:id="@+id/separator14"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/category2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/text_confirmed_value"
            android:gravity="center"
            android:text="Don'ts"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/guideline21"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb21"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/thumb21"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Don’t Touch Your Face"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading21"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toStartOf="@+id/thumb21"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Do not touch your face, nose and mouth often. This avoids the risks of developing the virus."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb21"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/coverface" />

            <View
                android:id="@+id/separator21"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline22"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb22"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/thumb22"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Avoid Close Contact"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading22"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@+id/thumb22"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Do not get close to anyone, especially touching or laughing closely. Also, use anti-pollution masks when out with friends or family."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb22"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/handshake" />

            <View
                android:id="@+id/separator22"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline23"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb23"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/thumb23"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Do Not Spit"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading23"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toStartOf="@+id/thumb23"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Spitting can increase the spread of the virus. Avoid spiting at in public and home. Also, avoid getting close to a sick person suffering from cold and cough."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb23"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/spit" />

            <View
                android:id="@+id/separator23"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guideline24"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/heading24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumb24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/thumb24"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Don’t Panic, Take It Easy"
                android:textColor="@color/app_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading24"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@+id/thumb24"
                android:ellipsize="end"
                android:maxLines="6"
                android:text="Most often a state of fear can lead to taking wrong decisions and use of self-medication. All you need to keep in mind is hygiene."
                android:textColor="@color/app_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/thumb24"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/corona" />

            <View
                android:id="@+id/separator24"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dark_background"
                android:paddingTop="16dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
